<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>  
        <record id="ha_student_view_tree" model="ir.ui.view">
            <field name="name">student.tree</field>
            <field name="model">ha.student</field>
            <field name="arch" type="xml">
                        <tree string="Student Form">
                            <field name="name"/>
                            <field name="email"/>
                        </tree>
            </field>
        </record>  
        <record id="ha_student_view_form" model="ir.ui.view">
            <field name="name">ha.student.view.form</field>
            <field name="model">ha.student</field>
            <field name="arch" type="xml">
                <form string="Student Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="dob"/>
                            <field name="partner"/>
                            <field name="contact_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

       
        <record id="ha_student_view_act" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">ha.student</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem id="menu_student"
                  name="Student"
                  action="ha_student_view_act"
                  web_icon="study2,static/description/icon.png"
                  />
    </data>  

</odoo>

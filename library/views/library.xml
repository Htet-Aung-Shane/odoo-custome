<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ha_library_view_act" model="ir.actions.act_window">
            <field name="name">Library</field>
            <field name="res_model">ha.library</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="ha_library_view_tree" model="ir.ui.view">
            <field name="name">ha.library.tree</field>
            <field name="model">ha.library</field>
            <field name="arch" type="xml">
                <tree string="Library">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="ha_library_view_form" model="ir.ui.view">
            <field name="name">ha.library.view.form</field>
            <field name="model">ha.library</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                           <field name="name" />
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <menuitem id="menu_library" name="Library" action="ha_library_view_act"
            web_icon="library,static/description/icon.png" />
    </data>
</odoo>